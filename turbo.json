{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "dotEnv": [".env.local", ".env.production", ".env"]
    },
    "@community/labs#build": {
      "dependsOn": ["^build"],
      "env": [
        "DATABASE_URL",
        "GITHUB_ACCESS_TOKEN",
        "GITHUB_CLIENT_ID",
        "GITHUB_CLIENT_SECRET",
        "NEXTAUTH_SECRET",
        "NEXTAUTH_URL",
        "NEXT_PUBLIC_APP_URL",
        "NODE_ENV",
        "POSTMARK_ACTIVATION_TEMPLATE",
        "POSTMARK_API_TOKEN",
        "POSTMARK_SIGN_IN_TEMPLATE",
        "SMTP_FROM",
        "STRIPE_API_KEY",
        "STRIPE_PRO_MONTHLY_PLAN_ID",
        "STRIPE_WEBHOOK_SECRET"
      ],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "@community/write#build": {
      "dependsOn": ["^build"],
      "env": [
        "AUTH_BEARER_TOKEN",
        "AUTH_GITHUB_ID",
        "AUTH_GITHUB_SECRET",
        "BLOB_READ_WRITE_TOKEN",
        "KV_REST_API_URL",
        "KV_REST_API_TOKEN",
        "NEXTAUTH_SECRET",
        "NEXTAUTH_URL",
        "NEXT_PUBLIC_ROOT_DOMAIN",
        "NEXT_PUBLIC_VERCEL_ENV",
        "NODE_ENV",
        "OPENAI_API_KEY",
        "POSTGRES_DATABASE",
        "POSTGRES_HOST",
        "POSTGRES_PASSWORD",
        "POSTGRES_PRISMA_URL",
        "POSTGRES_URL",
        "POSTGRES_URL_NON_POOLING",
        "POSTGRES_USER",
        "PROJECT_ID_VERCEL",
        "REDIRECT_TO_CUSTOM_DOMAIN_IF_EXISTS",
        "TEAM_ID_VERCEL",
        "VERCEL_URL"
      ],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "@community/lms#build": {
      "dependsOn": ["^build"],
      "env": [
        "BLOB_READ_WRITE_TOKEN",
        "CLERK_SECRET_KEY",
        "CLERK_WEBHOOK_SECRET",
        "DATABASE_URL",
        "MUX_TOKEN_ID",
        "MUX_TOKEN_SECRET",
        "NEXT_PUBLIC_APP_URL",
        "NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL",
        "NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL",
        "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY",
        "NEXT_PUBLIC_CLERK_SIGN_IN_URL",
        "NEXT_PUBLIC_CLERK_SIGN_UP_URL",
        "NEXT_PUBLIC_TEACHER_ID",
        "NEXT_PUBLIC_VERCEL_URL",
        "NODE_ENV",
        "POSTGRES_URL",
        "POSTGRES_PRISMA_URL",
        "POSTGRES_URL_NON_POOLING",
        "POSTGRES_USER",
        "POSTGRES_HOST",
        "POSTGRES_PASSWORD",
        "POSTGRES_DATABASE",
        "STRIPE_BEST_MONTHLY_PRICE_ID",
        "STRIPE_COUPON_ID",
        "STRIPE_API_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "UPLOADTHING_APP_ID",
        "UPLOADTHING_SECRET"
      ],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "@community/web#build": {
      "dependsOn": ["^build"],
      "env": [
        "COMPANY_NAME",
        "NEXT_PUBLIC_APP_URL",
        "NEXT_PUBLIC_VERCEL_URL",
        "SHOPIFY_REVALIDATION_SECRET",
        "SHOPIFY_STOREFRONT_ACCESS_TOKEN",
        "SHOPIFY_STORE_DOMAIN",
        "SITE_NAME",
        "TWITTER_CREATOR",
        "TWITTER_SITE"
      ],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
